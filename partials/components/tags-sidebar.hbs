<aside class="gh-sidebar" style="margin-top: 20px;">
    <div class="gh-sidebar-inner">
        {{#get "tags" limit="5" order="count_posts desc" include="count.posts"}}
            <section class="gh-featured gh-outer">
                <div class="gh-featured-inner gh-inner">
                    <h2 class="gh-featured-title">Tags</h2>
                    <div class="gh-featured-feed" >
                        {{#foreach tags}}
                            {{> "tag-card"}}
                        {{/foreach}}
                    </div>
                </div>
            </section>
        {{/get}}
    </div>
</aside>